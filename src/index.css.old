body {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background: url("./images/banner1.jpg");
  background-attachment: fixed;
    background-position: center;
    background-size: cover;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
  padding:0;
  margin:0; 
  font-family: 'Roboto Condensed', sans-serif;
  font-size: 100%;
}

#root {
  height: 100%;
}

/* HEADER */
.ant-layout-header{
  background-color: #2C3E50;
}
/* TABLES */
.ant-table-thead>tr>th,.ant-table-small .ant-table-thead>tr>th{
  background: #2C3E50;
  color: #fff;
}
.ant-table-thead>tr>th:hover, .ant-table-thead th.ant-table-column-has-sorters.ant-table-cell-fix-left:hover, .ant-table-thead th.ant-table-column-has-sorters:hover{
  /* .ant-table-thead th.ant-table-column-has-sorters.ant-table-cell-fix-left:hover{ */
  background: #001529;
}
.ant-table-thead th.ant-table-column-sort{
  background: #2c3e50;
}
/* INPUTS */
.ant-input:hover{
  border-color: #0AD8AF;
  border-right-width: 1px!important;
}
.ant-picker-input>input:hover{
  border-color: #0AD8AF;
}
.ant-picker-today-btn:active, .ant-picker-today-btn{
  color: #0AD8AF;
}
.ant-picker-cell-in-view.ant-picker-cell-today .ant-picker-cell-inner:before{
  border: 1px solid #0AD8AF;
}
.ant-picker-focused, .ant-picker:hover{
  border-color:#0AD8AF;
}
.ant-picker-cell-in-view.ant-picker-cell-selected .ant-picker-cell-inner{
  background: #0AD8AF;
}
.ant-input-search .ant-input:focus, .ant-input-search .ant-input:hover{
  border-color: #0AD8AF;
}
/* ICONS */
.ant-upload.ant-upload-drag p.ant-upload-drag-icon .anticon{
  color: #0AD8AF;
}
/* UPLOAD */
.ant-upload.ant-upload-drag:not(.ant-upload-disabled):hover{
  border-color: #0AD8AF;
}

/* КНОПКИ */
.login_btn{
  width: 100%;
  background-color: #18BC9C;
  border: none;
  color: #fff;
}
.login_btn:focus, .login_btn:hover{
  background-color: #0AD8AF;
  border: none;
  color: #fff;
}
.ant-btn:active, .ant-btn:focus, .ant-btn:hover{
  border: 1px solid #0AD8AF;
  color: #0AD8AF;
}
.ant-btn-primary{
  background-color: #18BC9C;
  border: none;
  color: #fff;
}
.ant-btn-primary:focus, .ant-btn-primary:hover{
  background-color: #0AD8AF;
  color: #fff;
}

/* Main menu*/
.page-desc{
  font-size: 14px !important;
}
.main-menu-button{
  width: 15%;
  height: 350px;
  font-size: 30px;
  border: none;
  background-color: #18BC9C;
  color: #fff;
}
.main-menu-button:focus, .main-menu-button:hover{
  background-color: #0AD8AF;
  border: none;
  color: #fff;
}
/* LINK */
.ant-space-item a{
  color: #000;
}
.ant-space-item a:hover{
  color: #0AD8AF;
}

/* DROPDOWN MENU */
.ant-dropdown-menu-item.ant-dropdown-menu-item-danger{
  color: #18BC9C;
}
.ant-dropdown-menu-item.ant-dropdown-menu-item-danger:hover{
  background-color: #0AD8AF;
  color: #fff;
}
.userName{
  color: #fff !important;
}
.userName:hover{
  color: #18BC9C !important;
}
/* Step Items */
.ant-steps-item-finish .ant-steps-item-icon{
  background-color: #18BC9C;
  border: none;
}
.ant-steps-item-process>.ant-steps-item-container>.ant-steps-item-icon{
  background-color: #18BC9C;
  border: none;
}
.ant-steps-item-finish .ant-steps-item-icon>.ant-steps-icon{
  color: #fff;
  border: none;
}
.ant-steps-item-finish>.ant-steps-item-container>.ant-steps-item-tail:after,.ant-steps-item-finish .ant-steps-item-icon>.ant-steps-icon .ant-steps-icon-dot,.ant-steps-item-finish>.ant-steps-item-container>.ant-steps-item-content>.ant-steps-item-title:after{
  background-color: #18BC9C;
}
/* PAGINATION */
.ant-pagination-item-active a{
  color: #18BC9C;
}
.ant-pagination-item-active{
  border-color: #18BC9C;
}
.ant-pagination-item-active:hover{
  color: #0AD8AF;
  border-color: #0AD8AF;
}
/* CHECKBOX */
.ant-checkbox-checked .ant-checkbox-inner{
  background-color: #18BC9C;
    border-color: #18BC9C;
}
/* Sider Menu */
.ant-layout-sider-light{
  z-index: 1;
}
.ant-layout-sider{
  background: #2c3e50;
  z-index: 1;
}
.ant-menu-item-group-title{
  color: #fff;
}

.main-layout {
  height: 100%;
}

.content-layout {
  margin-left: 10px;
}

code {
  font-family: source-code-pro, Menlo, Monaco, Consolas, 'Courier New',
    monospace;
}


.site-card-wrapper {
  padding: 30px;
  background: #ececec;
}

.ant-card.application {
  background-color: rgb(183, 231, 252);
}
.ant-card.incoming {
  background-color: #fff;
}
.ant-card.outcoming {
  background-color: #fff;
}


/* CROLL TREE */
.ant-transfer {
  height: 80%;
}
.ant-transfer-list-body-customize-wrapper {
  overflow-y: auto;
}
/* /SCROOL TREE */

/* HIDE ARROW */
.block .ant-tree-switcher {
  pointer-events: none;
}


/* /HIDE ARROW */

.statusSelected {
    box-shadow: inset 0px 0px 10px 4px rgb(190 190 190);
    transform: scale(1);
    z-index: 1;
}
.sd-tables-row-hover .ant-table-tbody > tr:hover > td {
    background-color: rgba(238, 238, 238, 1) !important;
}

.select-data-revision {
  color: rgb(123, 131, 131);
  text-decoration: underline;
}
/* MAIN BG */
.ant-layout{
  /* background: #E5E1DD !important; */
  background: url(./images/background3.jpg) !important;
  z-index: 0;
  width: 100%;
  height: 100%;
}
.ant-layout-content{
  z-index: 0;
}
.ant-layout-content::before{
  content: '';
  background-color: rgba(255, 255, 255, 0.7);
  /* background: url(../../../images/login-signup2.png); */
  position: absolute;
  top: 65px;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1;
}
/* .ant-menu-root.ant-menu-inline, .ant-menu-root.ant-menu-vertical, .ant-menu-root.ant-menu-vertical-left, .ant-menu-root.ant-menu-vertical-right{ */
.ant-menu-root.ant-menu-inline{
  background: #18BC9C;
  color: #fff !important;
}
.ant-menu-inline.ant-menu-root .ant-menu-item, .ant-menu-inline.ant-menu-root .ant-menu-submenu-title{
  color: #fff;
}
.ant-menu-item-selected, .ant-menu-item-selected a, .ant-menu-item-selected a:hover{
  color: #fff;
}
.ant-menu-item a{
  color: #fff;
}
.ant-menu:not(.ant-menu-horizontal) .ant-menu-item-selected{
  background: #0AD8AF;
  color: #fff;
}
.ant-menu-item a:hover, .ant-menu-inline.ant-menu-root .ant-menu-item, .ant-menu-inline.ant-menu-root .ant-menu-submenu-title:hover{
  color: #fff;
}
.ant-menu-inline, .ant-menu-vertical, .ant-menu-vertical-left{
  border: none;
}
